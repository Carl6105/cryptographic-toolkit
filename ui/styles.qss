QMainWindow {
    background-color: #121212;
    color: #ffffff;
    font-family: "Segoe UI";
}

QTabWidget::pane {
    border: 1px solid #2c2c2c;
}

QTabBar::tab {
    background: #2c2c2c;
    color: #ffffff;
    padding: 8px;
    border-radius: 6px;
}

QTabBar::tab:selected {
    background: #3a3a3a;
    font-weight: bold;
}

QPushButton {
    background-color: #4caf50;
    color: white;
    padding: 8px;
    border-radius: 6px;
}

QPushButton:hover {
    background-color: #66bb6a;
}